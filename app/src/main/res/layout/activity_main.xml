<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MY TO-DO LIST"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="-5dp" />

    <EditText
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_below="@+id/textTitle"
        android:background="@drawable/customedit"
        android:hint="Task Name"
        android:textSize="24dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/taskDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_below="@+id/taskName"
        android:background="@drawable/customedit"
        android:hint="Task Details"
        android:textSize="24dp"
        android:minLines="3"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/taskDate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_below="@+id/taskDetails"
        android:background="@drawable/customedit"
        android:hint="Task Date"
        android:textSize="24dp"
        android:inputType="text" />

    <Button
        android:id="@+id/btnDate"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_below="@+id/taskDetails"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/customedit"
        android:text="Select Date"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/taskStatus"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_below="@+id/taskDate"
        android:background="@drawable/customedit"
        android:hint="Task Status"
        android:textSize="24dp"
        android:inputType="text" />

    <Button
        android:id="@+id/btnView"
        android:layout_height="50dp"
        android:layout_width="160dp"
        android:layout_below="@+id/taskStatus"
        android:layout_marginTop="20dp"
        android:background="@drawable/customedit"
        android:textSize="15dp"
        android:text="View Task" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_height="50dp"
        android:layout_width="160dp"
        android:layout_alignRight="@+id/btnView"
        android:layout_below="@+id/taskStatus"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/customedit"
        android:textSize="15dp"
        android:text="Insert Task" />

    <EditText
        android:id="@+id/taskID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_below="@+id/btnInsert"
        android:background="@drawable/customedit"
        android:hint="Task ID"
        android:textSize="24dp"
        android:inputType="text" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_height="50dp"
        android:layout_width="160dp"
        android:layout_below="@+id/taskID"
        android:layout_marginTop="20dp"
        android:background="@drawable/customedit"
        android:textSize="15dp"
        android:text="Update Task" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_height="50dp"
        android:layout_width="160dp"
        android:layout_alignRight="@+id/btnUpdate"
        android:layout_below="@+id/taskID"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/customedit"
        android:textSize="15dp"
        android:text="Delete Task" />

</RelativeLayout>